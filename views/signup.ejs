<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Pintorest - Sign Up</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <link href='https://fonts.googleapis.com/css?family=EB+Garamond' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" type="text/css" href="css/main.css">
        <style>
            body { padding-top:80px; }
        </style>
    </head>
    <body>

        
        <div class="container">

            <h1><span class="fa fa-sign-in"></span> Signup</h1>
            <hr>
            
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form action="/signup" method="post" role="form">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Username</label>
                        <span class="username red-star"> *</span>
                        <input type="text" class="form-control" name="username" id="username"minlength=4 maxlength=14 required placeholder="4 - 14 characters">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <span class="password red-star"> *</span>
                        <input type="password" class="form-control" name="password" minlength=4 required placeholder="Required, at least 4 characters">
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <span class="red-star"> *</span>
                        <input type="password" class="form-control" name="password-confirm" minlength=4 required placeholder="Required">
                    </div>
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text" class="form-control" name="firstname" placeholder="Optional">
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text" class="form-control" name="lastname" placeholder="Optional">
                    </div>
                
                    <button type="submit" class="btn btn-primary btn-md">Signup</button>
                    <a href="/auth/twitter" class="btn btn-info btn-md"><span class="fa fa-twitter"></span> Twitter</a>
                    <hr>

                    <p>Already have an account? <a href="/login">Login</a></p>
                    <p>Or go <a href="/">home</a>.</p>
                </div>
            </form>

        </div>
        <script type="text/javascript" src="javascript/validate_form.js"></script>
    </body>
</html>